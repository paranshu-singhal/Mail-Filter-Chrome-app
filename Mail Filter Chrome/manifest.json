{
"manifest_version": 2,

"name": "Mail Filter",
  "short_name": "Mails Filter",
  "description": "Filter your e-mails according to your preferances.",
  "version": "1.0",
  
  "permissions": [
    "tabs",
	"identity",
    "*://*.google.com/*",
	"https://www.googleapis.com/",
	"https://accounts.google.com/"
  ],
  
  "oauth2": {
    "client_id": "752876804494-89290mlvi975ls09fp6afhlh5mfgu52g.apps.googleusercontent.com",
    "scopes": [
     "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },
  "content_security_policy": "script-src https://*.google.com 'unsafe-eval'; object-src 'self'",
  "options_page": "options.html",
  "icons": {  "16": "images/email-blu.png",
              "32": "images/email-blu.png",
              "48": "images/email-blu.png",
             "128": "images/email-blu.png" },
  "browser_action": {
    "default_icon": "images/email-blu.png",
    "default_popup": "mail.html"
  }
}